<style>
  .form-group{
    width: 80%;
    margin: 10px auto;
  }
</style>

<% if @user.errors.any? %>
   <ul>
    <% @user.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
  </ul>
<% end %>

<%= form_for @user do |f| %>
  <div class="form-group">
    <%= f.label :name , "Name" %>
    <%= f.text_field :name,class:"form-control" %>
  </div>
  
  <div class="form-group">
    <%= f.label :description,"Description" %>
    <%= f.text_area :description,class:"form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :image,"大頭貼上傳" %><br>
    <%= image_tag @user.image , width:"200px" if@user.image?%>
    <%= f.file_field :image %>
  </div>

  <div class="form-group">
    <%= f.submit class:"btn btn-primary"%>
    <%= link_to "Cancel" , user_path(@user),class:"btn btn-danger"%>
  </div>


<% end %>

